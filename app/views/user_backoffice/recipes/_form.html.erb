<%= form_with(model: [:user_backoffice, @recipe]) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :instructions %>
    <%= form.text_area :instructions %>
  </div>

  <div>
    <%= form.label :people %>
    <%= form.number_field :people %>
  </div>

  <div>
    <%= form.submit 'Salvar' %>
  </div>
<% end %>