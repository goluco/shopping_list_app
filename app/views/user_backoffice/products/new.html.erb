<h2>Adicionar novo produto</h2>

<% if @product.errors.any? %>
  <% @product.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_with(model: [:user_backoffice, @product]) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name %>
  </div>

  <div>
    <%= form.submit 'Salvar' %>
  </div>
<% end %>